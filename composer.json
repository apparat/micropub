{
  "name": "apparat/micropub",
  "description": "Apparat micropub server",
  "license": "MIT",
  "authors": [
    {
      "name": "Joschi Kuphal",
      "email": "joschi@kuphal.net"
    }
  ],
  "minimum-stability": "RC",
  "require": {
    "php": ">=5.6.0",
    "apparat/kernel": "@dev",
    "apparat/object": "@dev",
    "apparat/resource": "0.1.*",
    "apparat/server": "0.1.*",
    "dominicsayers/isemail": "@dev"
  },
  "require-dev": {
    "phpunit/phpunit": "^5.3",
    "apparat/dev": "dev-master",
    "satooshi/php-coveralls": "^1.0",
    "codeclimate/php-test-reporter": "dev-master"
  },
  "repositories": [
    {
      "type": "vcs",
      "url": "git@github.com:apparat/object.git",
      "reference": "master"
    },
    {
      "type": "vcs",
      "url": "git@github.com:apparat/resource.git",
      "reference": "master"
    },
    {
      "type": "vcs",
      "url": "git@github.com:apparat/kernel.git",
      "reference": "master"
    },
    {
      "type": "vcs",
      "url": "git@github.com:apparat/dev.git",
      "reference": "master"
    },
    {
      "type": "vcs",
      "url": "git@github.com:apparat/server.git",
      "reference": "master"
    },
    {
      "type": "vcs",
      "url": "git@github.com:dominicsayers/isemail.git",
      "reference": "master"
    }
  ],
  "autoload": {
    "psr-4": {
      "Apparat\\": "src/"
    },
    "files": [
      "src/Micropub/Module.php",
      "src/Micropub/Autorun.php"
    ]
  }
}
